{
    "version": 2,
    "cleanUrls": false,
    "trailingSlash": false,
    "rewrites": [
        {
            "source": "/auth/login",
            "destination": "/auth/login.html"
        },
        {
            "source": "/auth/register",
            "destination": "/auth/register.html"
        },
        {
            "source": "/page/chat",
            "destination": "/page/chat.html"
        },
        {
            "source": "/admin/(.*)",
            "destination": "/admin/$1.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*).html",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "text/html; charset=utf-8"
                }
            ]
        }
    ]
}